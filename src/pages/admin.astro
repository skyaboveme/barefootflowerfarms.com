  }

  .modal-header h2 {
    margin: 0;
    font-size: 1.3rem;
  }

  .close-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--color-earth);
  }

  .close-btn:hover {
    color: var(--color-sage-dark);
  }

  #product-form {
    padding: var(--spacing-md);
  }

  .form-group {
    margin-bottom: var(--spacing-sm);
  }

  .form-group label {
    display: block;
    margin-bottom: 4px;
    font-weight: 600;
    color: var(--color-sage-dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 2px solid var(--color-cream);
    border-radius: 8px;
    font-size: 1rem;
    font-family: var(--font-sans);
  }

