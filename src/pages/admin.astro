---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Admin - Barefoot Flower Farms">
  <div id="login-screen" class="admin-login">
    <div class="login-box">
      <h1>Admin Login</h1>
      <form id="login-form">
        <input type="password" id="password" placeholder="Enter password" required />
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <p id="login-error" class="error-message"></p>
    </div>
  </div>

  <div id="admin-panel" class="admin-panel" style="display: none;">
    <header class="admin-header">
      <h1>Product Management</h1>
      <div class="admin-actions">
        <button id="add-product-btn" class="btn btn-primary">+ Add Product</button>
        <button id="export-btn" class="btn btn-secondary">Export JSON</button>
        <button id="export-images-btn" class="btn btn-secondary">Download Images</button>
        <button id="logout-btn" class="btn btn-outline">Logout</button>
      </div>
    </header>

    <div class="admin-content">
      <div class="products-table-container">
        <table class="products-table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th>Unit</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="products-tbody">
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add/Edit Product Modal -->
    <div id="product-modal" class="modal" style="display: none;">
      <div class="modal-content">
        <div class="modal-header">
          <h2 id="modal-title">Add Product</h2>
          <button id="close-modal" class="close-btn">&times;</button>
        </div>
        <form id="product-form">
          <input type="hidden" id="product-id" />

          <div class="form-group">
            <label for="product-name">Name *</label>
            <input type="text" id="product-name" required />
          </div>

          <div class="form-group">
            <label for="product-category">Category *</label>
            <select id="product-category" required>
              <option value="Cut Flowers">Cut Flowers</option>
              <option value="Plants">Plants</option>
              <option value="Seeds">Seeds</option>
            </select>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="product-price">Price *</label>
              <input type="number" id="product-price" step="0.01" min="0" required />
            </div>
            <div class="form-group">
              <label for="product-unit">Unit *</label>
              <input type="text" id="product-unit" placeholder="bunch, pot, packet" required />
            </div>
          </div>

          <div class="form-group">
            <label for="product-description">Description</label>
            <textarea id="product-description" rows="3"></textarea>
          </div>

          <!-- Image Section -->
          <div class="form-group">
            <label>Product Image</label>
            <div class="image-options">
              <div class="image-preview-container">
                <div id="image-preview" class="image-preview">
                  <span class="preview-placeholder">No image</span>
                </div>
              </div>

              <div class="image-buttons">
                <label class="btn btn-secondary upload-btn">
                  <input type="file" id="image-upload" accept="image/*" style="display: none;" />
                  Upload Image
                </label>
                <button type="button" id="generate-image-btn" class="btn btn-accent">
                  Generate Image
                </button>
              </div>

              <input type="hidden" id="product-image" />
              <input type="hidden" id="product-image-data" />

              <div class="image-path-input">
                <label for="product-image-path">Or enter image path:</label>
                <input type="text" id="product-image-path" placeholder="/Images/filename.jpeg" />
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="product-emoji">Emoji (fallback if no image)</label>
            <input type="text" id="product-emoji" placeholder="ðŸŒ¸" maxlength="4" />
          </div>

          <div class="form-actions">
            <button type="button" id="cancel-btn" class="btn btn-outline">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Product</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Image Generation Modal -->
    <div id="generate-modal" class="modal" style="display: none;">
      <div class="modal-content generate-modal-content">
        <div class="modal-header">
          <h2>Generate Flower Image</h2>
          <button id="close-generate-modal" class="close-btn">&times;</button>
        </div>
        <div class="generate-content">
          <p>Generate an AI image based on the flower name and description. This uses a free image API to create a placeholder image.</p>

          <div class="form-group">
            <label for="generate-prompt">Image Description</label>
            <textarea id="generate-prompt" rows="3" placeholder="Beautiful pink zinnias in a rustic vase, natural lighting, flower farm style"></textarea>
          </div>

          <div class="generate-preview">
            <div id="generated-image-preview" class="image-preview">
              <span class="preview-placeholder">Preview will appear here</span>
            </div>
          </div>

          <div class="generate-options">
            <button type="button" id="do-generate-btn" class="btn btn-primary">Generate Preview</button>
            <button type="button" id="use-generated-btn" class="btn btn-accent" disabled>Use This Image</button>
          </div>

          <p class="generate-note">
            <strong>Note:</strong> Generated images are placeholders. For best results, upload your own photos of your beautiful flowers!
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Simple password (in production, use proper authentication)
  const ADMIN_PASSWORD = 'barefoot2024';

  let products: any[] = [];
  let uploadedImages: { [key: string]: string } = {}; // Store base64 images by filename

  // DOM Elements
  const loginScreen = document.getElementById('login-screen');
  const adminPanel = document.getElementById('admin-panel');
  const loginForm = document.getElementById('login-form');
  const loginError = document.getElementById('login-error');
  const productsTbody = document.getElementById('products-tbody');
  const productModal = document.getElementById('product-modal');
  const productForm = document.getElementById('product-form');
  const modalTitle = document.getElementById('modal-title');
  const generateModal = document.getElementById('generate-modal');

  // Check if already logged in
  if (sessionStorage.getItem('adminLoggedIn') === 'true') {
    showAdminPanel();
  }

  // Login handler
  loginForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    const password = (document.getElementById('password') as HTMLInputElement).value;

    if (password === ADMIN_PASSWORD) {
      sessionStorage.setItem('adminLoggedIn', 'true');
      showAdminPanel();
    } else {
      loginError!.textContent = 'Incorrect password';
    }
  });

  // Logout handler
  document.getElementById('logout-btn')?.addEventListener('click', () => {
    sessionStorage.removeItem('adminLoggedIn');
    loginScreen!.style.display = 'flex';
    adminPanel!.style.display = 'none';
  });

  // Show admin panel and load products
  async function showAdminPanel() {
    loginScreen!.style.display = 'none';
    adminPanel!.style.display = 'block';
    await loadProducts();
  }

  // Load products from JSON
  async function loadProducts() {
    try {
      const response = await fetch('/data/products.json');
      const data = await response.json();
      products = data.products;
      renderProducts();
    } catch (error) {
      console.error('Error loading products:', error);
    }
  }

  // Render products table
  function renderProducts() {
    productsTbody!.innerHTML = products.map(product => `
      <tr>
        <td class="product-image-cell">
          ${product.image
            ? `<img src="${product.image}" alt="${product.name}" />`
            : product.imageData
              ? `<img src="${product.imageData}" alt="${product.name}" />`
              : `<span class="emoji">${product.emoji || 'ðŸŒ¸'}</span>`}
        </td>
        <td><strong>${product.name}</strong><br><small>${product.description?.substring(0, 50)}...</small></td>
        <td><span class="category-badge ${product.category.toLowerCase().replace(' ', '-')}">${product.category}</span></td>
        <td>$${product.price}</td>
        <td>${product.unit}</td>
        <td class="actions-cell">
          <button class="btn-edit" data-id="${product.id}">Edit</button>
          <button class="btn-delete" data-id="${product.id}">Delete</button>
        </td>
      </tr>
    `).join('');

    // Add edit handlers
    document.querySelectorAll('.btn-edit').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = parseInt((e.target as HTMLElement).dataset.id!);
        editProduct(id);
      });
    });

    // Add delete handlers
    document.querySelectorAll('.btn-delete').forEach(btn => {
      btn.addEventListener('click', (e) => {
        const id = parseInt((e.target as HTMLElement).dataset.id!);
        deleteProduct(id);
      });
    });
  }

  // Open modal for adding new product
  document.getElementById('add-product-btn')?.addEventListener('click', () => {
    modalTitle!.textContent = 'Add Product';
    productForm!.reset();
    (document.getElementById('product-id') as HTMLInputElement).value = '';
    (document.getElementById('product-image') as HTMLInputElement).value = '';
    (document.getElementById('product-image-data') as HTMLInputElement).value = '';
    (document.getElementById('product-image-path') as HTMLInputElement).value = '';
    updateImagePreview('');
    productModal!.style.display = 'flex';
  });

  // Edit product
  function editProduct(id: number) {
    const product = products.find(p => p.id === id);
    if (!product) return;

    modalTitle!.textContent = 'Edit Product';
    (document.getElementById('product-id') as HTMLInputElement).value = String(product.id);
    (document.getElementById('product-name') as HTMLInputElement).value = product.name;
    (document.getElementById('product-category') as HTMLSelectElement).value = product.category;
    (document.getElementById('product-price') as HTMLInputElement).value = product.price;
    (document.getElementById('product-unit') as HTMLInputElement).value = product.unit;
    (document.getElementById('product-description') as HTMLTextAreaElement).value = product.description || '';
    (document.getElementById('product-image-path') as HTMLInputElement).value = product.image || '';
    (document.getElementById('product-image-data') as HTMLInputElement).value = product.imageData || '';
    (document.getElementById('product-emoji') as HTMLInputElement).value = product.emoji || '';

    // Update preview
    updateImagePreview(product.imageData || product.image || '');

    productModal!.style.display = 'flex';
  }

  // Update image preview
  function updateImagePreview(src: string) {
    const preview = document.getElementById('image-preview')!;
    if (src) {
      preview.innerHTML = `<img src="${src}" alt="Preview" />`;
    } else {
      preview.innerHTML = '<span class="preview-placeholder">No image</span>';
    }
  }

  // Handle image upload
  document.getElementById('image-upload')?.addEventListener('change', (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = (event) => {
      const base64 = event.target?.result as string;
      (document.getElementById('product-image-data') as HTMLInputElement).value = base64;
      (document.getElementById('product-image-path') as HTMLInputElement).value = '';
      updateImagePreview(base64);

      // Store for later download
      const filename = file.name.replace(/[^a-zA-Z0-9.-]/g, '-').toLowerCase();
      uploadedImages[filename] = base64;
    };
    reader.readAsDataURL(file);
  });

  // Handle image path input
  document.getElementById('product-image-path')?.addEventListener('input', (e) => {
    const path = (e.target as HTMLInputElement).value;
    if (path) {
      (document.getElementById('product-image-data') as HTMLInputElement).value = '';
      updateImagePreview(path);
    }
  });

  // Open generate modal
  document.getElementById('generate-image-btn')?.addEventListener('click', () => {
    const name = (document.getElementById('product-name') as HTMLInputElement).value;
    const description = (document.getElementById('product-description') as HTMLTextAreaElement).value;
    const category = (document.getElementById('product-category') as HTMLSelectElement).value;

    // Create a prompt based on the product info
    const prompt = `Beautiful ${name}, ${description || category}, natural lighting, flower farm photography style, rustic aesthetic`;
    (document.getElementById('generate-prompt') as HTMLTextAreaElement).value = prompt;

    // Reset preview
    document.getElementById('generated-image-preview')!.innerHTML = '<span class="preview-placeholder">Preview will appear here</span>';
    (document.getElementById('use-generated-btn') as HTMLButtonElement).disabled = true;

    generateModal!.style.display = 'flex';
  });

  // Close generate modal
  document.getElementById('close-generate-modal')?.addEventListener('click', () => {
    generateModal!.style.display = 'none';
  });

  // Generate image preview
  let generatedImageUrl = '';
  document.getElementById('do-generate-btn')?.addEventListener('click', async () => {
    const prompt = (document.getElementById('generate-prompt') as HTMLTextAreaElement).value;
    const previewEl = document.getElementById('generated-image-preview')!;
    const useBtn = document.getElementById('use-generated-btn') as HTMLButtonElement;

    previewEl.innerHTML = '<span class="preview-placeholder">Generating...</span>';
    useBtn.disabled = true;

    try {
      // Using Pollinations.ai - a free AI image generation API
      const encodedPrompt = encodeURIComponent(prompt);
      const imageUrl = `https://image.pollinations.ai/prompt/${encodedPrompt}?width=400&height=400&seed=${Date.now()}`;

      // Preload the image
      const img = new Image();
      img.crossOrigin = 'anonymous';
      img.onload = () => {
        previewEl.innerHTML = `<img src="${imageUrl}" alt="Generated preview" />`;
        generatedImageUrl = imageUrl;
        useBtn.disabled = false;
      };
      img.onerror = () => {
        previewEl.innerHTML = '<span class="preview-placeholder">Failed to generate. Try again.</span>';
      };
      img.src = imageUrl;
    } catch (error) {
      previewEl.innerHTML = '<span class="preview-placeholder">Error generating image</span>';
    }
  });

  // Use generated image
  document.getElementById('use-generated-btn')?.addEventListener('click', async () => {
    if (!generatedImageUrl) return;

    const useBtn = document.getElementById('use-generated-btn') as HTMLButtonElement;
    useBtn.textContent = 'Converting...';
    useBtn.disabled = true;

    try {
      // Convert to base64 for local storage
      const response = await fetch(generatedImageUrl);
      const blob = await response.blob();
      const reader = new FileReader();
      reader.onload = () => {
        const base64 = reader.result as string;
        (document.getElementById('product-image-data') as HTMLInputElement).value = base64;
        (document.getElementById('product-image-path') as HTMLInputElement).value = '';
        updateImagePreview(base64);
        generateModal!.style.display = 'none';
        useBtn.textContent = 'Use This Image';
      };
      reader.readAsDataURL(blob);
    } catch (error) {
      // If CORS blocks us, just use the URL directly
      (document.getElementById('product-image-data') as HTMLInputElement).value = generatedImageUrl;
      (document.getElementById('product-image-path') as HTMLInputElement).value = '';
      updateImagePreview(generatedImageUrl);
      generateModal!.style.display = 'none';
      useBtn.textContent = 'Use This Image';
    }
  });

  // Delete product
  function deleteProduct(id: number) {
    if (confirm('Are you sure you want to delete this product?')) {
      products = products.filter(p => p.id !== id);
      renderProducts();
    }
  }

  // Close modal
  document.getElementById('close-modal')?.addEventListener('click', () => {
    productModal!.style.display = 'none';
  });

  document.getElementById('cancel-btn')?.addEventListener('click', () => {
    productModal!.style.display = 'none';
  });

  // Save product
  productForm?.addEventListener('submit', (e) => {
    e.preventDefault();

    const id = (document.getElementById('product-id') as HTMLInputElement).value;
    const imageData = (document.getElementById('product-image-data') as HTMLInputElement).value;
    const imagePath = (document.getElementById('product-image-path') as HTMLInputElement).value;

    const product: any = {
      id: id ? parseInt(id) : Math.max(0, ...products.map(p => p.id)) + 1,
      name: (document.getElementById('product-name') as HTMLInputElement).value,
      category: (document.getElementById('product-category') as HTMLSelectElement).value,
      price: (document.getElementById('product-price') as HTMLInputElement).value,
      unit: (document.getElementById('product-unit') as HTMLInputElement).value,
      description: (document.getElementById('product-description') as HTMLTextAreaElement).value,
      image: imagePath || '',
      emoji: (document.getElementById('product-emoji') as HTMLInputElement).value
    };

    // If we have base64 image data, store it
    if (imageData && !imagePath) {
      product.imageData = imageData;
      // Create a filename for the image
      const safeName = product.name.toLowerCase().replace(/[^a-z0-9]+/g, '-');
      product.image = `/Images/${safeName}.jpg`;
      uploadedImages[`${safeName}.jpg`] = imageData;
    }

    if (id) {
      // Update existing
      const index = products.findIndex(p => p.id === parseInt(id));
      if (index !== -1) products[index] = product;
    } else {
      // Add new
      products.push(product);
    }

    renderProducts();
    productModal!.style.display = 'none';
  });

  // Export JSON
  document.getElementById('export-btn')?.addEventListener('click', () => {
    // Create a clean version without imageData for the JSON
    const cleanProducts = products.map(p => {
      const { imageData, ...clean } = p;
      return clean;
    });

    const dataStr = JSON.stringify({ products: cleanProducts }, null, 2);
    const blob = new Blob([dataStr], { type: 'application/json' });
    const url = URL.createObjectURL(blob);

    const a = document.createElement('a');
    a.href = url;
    a.download = 'products.json';
    a.click();

    URL.revokeObjectURL(url);

    alert('JSON exported! Upload this file to public/data/products.json in your GitHub repository.\n\nIf you uploaded images, also click "Download Images" to get them.');
  });

  // Export uploaded images
  document.getElementById('export-images-btn')?.addEventListener('click', () => {
    // Collect all images that need to be downloaded
    const imagesToDownload: { filename: string; data: string }[] = [];

    products.forEach(p => {
      if (p.imageData && p.image) {
        const filename = p.image.replace('/Images/', '');
        imagesToDownload.push({ filename, data: p.imageData });
      }
    });

    if (imagesToDownload.length === 0) {
      alert('No new images to download. All products are using existing image paths.');
      return;
    }

    // Download each image
    imagesToDownload.forEach((img, index) => {
      setTimeout(() => {
        const a = document.createElement('a');
        a.href = img.data;
        a.download = img.filename;
        a.click();
      }, index * 500); // Stagger downloads
    });

    alert(`Downloading ${imagesToDownload.length} image(s). Upload them to the public/Images/ folder in your GitHub repository.`);
  });
</script>

<style>
