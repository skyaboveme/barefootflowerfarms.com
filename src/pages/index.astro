    </div>
  </section>

  <!-- Find Us Section -->
  <section class="find-us">
    <div class="container">
      <h2 class="section-title">Find Us</h2>
      <p class="section-subtitle">Two locations to discover in Rosanky, Texas</p>

      <div class="locations-grid">
        <div class="location-box">
          <h3>ðŸŒ¸ Flower Market Stand</h3>
          <p class="location-address">St. Mary's Road, Rosanky</p>
          <div class="map-container small">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3469.8!2d-97.3456641!3d29.9070877!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8643615a1addbd6f%3A0x33b25b91c96c1ab5!2sString%20Prairie%20Gardens%20%26%20Barefoot%20Flower%20Farm!5e0!3m2!1sen!2sus!4v1699999999999!5m2!1sen!2sus"
