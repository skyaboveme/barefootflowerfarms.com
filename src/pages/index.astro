import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-background">
      <img src="/Images/farm-stand-wide-view.jpeg" alt="String Prairie Gardens & Barefoot Flower Farm stand" />
    </div>
    <div class="hero-content">
      <h1>Where Nature Blooms <em>Beautifully</em></h1>
